# Doxyfile for Libft Project

# General configuration options
PROJECT_NAME           = "Libft"
PROJECT_BRIEF          = "Una biblioteca estándar en C, implementada como parte del proyecto 42."
PROJECT_LOGO           = "images/logo.png"  # Si tienes un logo, agrega la ruta aquí.
OUTPUT_DIRECTORY       = "docs/html"  # Salida del HTML.
CREATE_SUBDIRS         = YES  # Crea subdirectorios si es necesario.
GENERATE_LATEX          = NO  # Si no necesitas un PDF.
EXTRACT_ALL            = YES  # Extrae todos los archivos, no solo los comentados.
EXTRACT_PRIVATE        = YES  # Incluye funciones privadas también.
EXTRACT_STATIC         = YES  # Incluye funciones estáticas.

# Source browsing
SOURCE_BROWSER         = YES
INLINE_SOURCES         = YES  # Muestra el código fuente directamente en la documentación.
STRIP_CODE_COMMENTS    = NO  # No elimina los comentarios del código.

# Doxygen output format
HTML_OUTPUT            = "docs/html"  # Salida en formato HTML
GENERATE_HTML          = YES
HTML_COLORSTYLE_HUE    = 210  # Estilo de color para HTML (puedes cambiarlo a tu gusto)
HTML_COLORSTYLE_SAT    = 255  # Saturación
HTML_COLORSTYLE_LIG    = 230  # Luminosidad
HTML_TIMESTAMP         = YES  # Muestra la fecha de última modificación.

# La estructura de archivos
INPUT                  = "libft.h" "src" "src/d_ascii" "src/d_fds" "src/d_get_next_line" "src/d_list" "src/d_memory" "src/d_printf" "src/d_strings"  # Archivos de entrada: encabezados y código fuente.
FILE_PATTERNS          = *.c *.h  # Extensiones de los archivos que Doxygen buscará.
RECURSIVE              = YES  # Busca en subdirectorios.
EXCLUDE_PATTERNS       = "*/tests/*"  # Puedes excluir directorios de pruebas u otros si lo necesitas.

# Documentation options
GENERATE_XML           = YES  # Genera XML para análisis.
GENERATE_RTF           = NO  # Si no necesitas el formato RTF.
GENERATE_MAN           = YES  # Si deseas que se generen páginas de man.
GENERATE_SEARCH_INDEX  = YES  # Genera un índice de búsqueda.

# Título y comentarios adicionales
TITLES_FILE            = "*/docs/titles.txt/*"  # Si tienes un archivo de títulos personalizado.
SHOW_FILES             = YES  # Muestra la lista de archivos en la documentación.

# Códigos de ejemplo
EXAMPLE_PATH           = "*/examples/*"  # Si tienes ejemplos de uso en tu proyecto.
EXAMPLE_PATTERNS       = *.c  # Solo busca archivos .c en ejemplos.

# Personalización adicional
ENABLE_PREPROCESSING   = YES  # Permite la preprocesación de archivos.
MACRO_EXPANSION        = YES  # Expande las macros durante la documentación.
EXPAND_ONLY_PREDEF     = YES  # Expande solo las macros predefinidas.

# Configuración avanzada
OPTIMIZE_OUTPUT_FOR_C  = YES  # Optimiza la documentación para código C.
PREDEFINED             = "LIBFT_EXPORT"  # Si tienes macros predefinidas, agrégalas aquí.
